<% include partials/header %>
<div class="ui main text container segment">
    <div class = "ui huge header">New Blog Post</div>
    <form action="/blogs" method="POST" class="ui form">
        <div class="field">
            <label>Blog Title</label>
            <input type=text name="blog[title]" placeholder="Title" required>
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type=text name="blog[image]" placeholder="Image" required>
        </div>
        <div class="field">
            <label>Blog Post Content</label>
            <textarea rows="3" name="blog[body]" placeholder="blog post goes here" required></textarea>
        </div>
        <button class="ui basic button" type="submit">Submit</button>
    </form>
</div>
    


<% include partials/footer %>