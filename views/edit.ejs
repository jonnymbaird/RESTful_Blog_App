<% include partials/header %>
<div class="ui main text container segment">
    <div class = "ui huge header">Edit <%= blog.title %></div>
    <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
        <div class="field">
            <label>Blog Title</label>
            <input type=text name="blog[title]" value="<%= blog.title %>" required>
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type=text name="blog[image]" value="<%= blog.image %>" required>
        </div>
        <div class="field">
            <label>Blog Post Content</label>
            <textarea rows="3" name="blog[body]" required><%= blog.body %></textarea>
        </div>
        <button class="ui basic button" type="submit">Submit</button>
        <a href="/blogs/<%= blog._id %>" class="ui orange basic button">Cancel</a>
    </form>
    
</div>
    

<% include partials/footer %>